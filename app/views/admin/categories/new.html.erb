<div class="admin-post-form">
  <h1>New Category</h1>

  <%= form_with model: [:admin, @category], local: true do |f| %>
    <% if @category.errors.any? %>
      <div class="errors">
        <h3><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h3>
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-actions">
      <%= f.submit "Create Category", class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_categories_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
